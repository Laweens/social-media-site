  <body>
   <form action="/post" method="POST">
                        <textarea name="description" rows="3" placeholder="What's on your mind, {{ current_user.username }}?" required></textarea>
                        <div class="add-post-links">
                            <input id="imagePost" type="text" name="Image" placeholder="Image URL">
                            <button id="submitPost" type="submit">Post</button>

                        </div>

                    </form>

                </div>

            </div>
            {% for post in posts %}
            <div class="post-container">
                <div class="post-row">
                    <div class="user-profile">
                        <img src="static/images/LCA.png" alt="Lights camera Action" />
                        <div>

                            <p>@{{ post.Username }}</p>

                            <span>{{ post.Timestamp }}</span>
                        </div>

                    </div>
                    <a href="#"><i class="fa-solid fa-ellipsis-vertical"></i></a>
                </div>
                <p class="post-text">{{ post.Description }}</p>
                {% if post.Image %}
                <img class="post-img" src="{{ post.Image }}" alt="" />
                {% endif %}
                <div class="post-row">
                    <div class="activity-icons">
                        <div><img src="static/images/like-blue.png" alt=""> {{ post.Likes }}</div>
                        <div><img src="images/comments.png" alt=""> {{ post.comments }}</div>
                        <div><img src="images/share.png" alt=""> {{ post.shares }}</div>
                    </div>
                    <div class="post-profile-icon">
                        <img src="images/profile-pic.png" alt="">
                    </div>
                </div>
            </div>
            {% endfor %}
           

