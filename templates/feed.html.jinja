    <header class="p-3 mb-3 border-bottom">
        <div class="container">
            <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
                <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 link-body-emphasis text-decoration-none">
                    <img src="Static/LCA.png" alt="logo" class="bi me-2" width="40" height="32" role="img"
                        aria-label="Bootstrap">
                </a>

                <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">

                    <li><a href="/" class="nav-link px-2 fw-bold  white">Home</a></li>
                    <li><a href="/feed" class="nav-link px-2 fw-bold  white">Feed</a></li>

                </ul>

                <form class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3" role="search">
                    <input type="search" class="form-control" placeholder="Search..." aria-label="Search">
                </form>

                <div class="dropdown text-end">
                    <a href="#" class="d-block link-body-emphasis text-decoration-none dropdown-toggle"
                        data-bs-toggle="dropdown" aria-expanded="false">
                        <img src="static/LCA.png" alt="mdo" width="32" height="32" class="rounded-circle">
                    </a>
                    <ul class="dropdown-menu text-small">
                        <li><a class="dropdown-item" href="/signin">Sign in</a></li>
                    </ul>
                </div>
            </div>
        </div>

        <main>




            <div class="row text-center padding-bottom padding-top container-sm ">
                <form method="POST" action="/post" class="row ">
                    <div class="col width padding-left">
                        <input type="text" class="form-control" placeholder="Enter a description" name="description">
                    </div>
                    <div class="col">
                        <button class="btn btn-primary " type="submit">Create Post</button>

                    </div>
                </form>
            </div>

            <hr class='padding-bottom'>
   <form action="/post" method="POST">
                        <textarea name="description" rows="3" placeholder="What's on your mind, {{ current_user.username }}?" required></textarea>
                        <div class="add-post-links">
                            <input id="imagePost" type="text" name="Image" placeholder="Image URL">
                            <button id="submitPost" type="submit">Post</button>

                        </div>

                    </form>

                </div>

            </div>
            {% for post in post_list %}
            <div class="col-6 container text-center padding-bottom wow animate__animated  animate__backInRight">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <p class="card-text"> {{post['description']}} </p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <form action="/likes/{{post['id']}}" method="POST">
                                    <button type="submit" class="btn btn-sm btn-outline-secondary">Like</button>
                                </form>
                                <button type="button"
                                    class="btn btn-sm btn-outline-secondary disabled">{{post['likes']}}</button>
                            </div>
                            <small class="text-body-secondary">{{post['timestamp']}}</small>
                        </div>
                    </div>
                </div>
            </div>

            {%endfor%}
        </main>


           

